<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To Groome"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="28sp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:padding="@dimen/_20sdp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please proceed as..."
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_marginLeft="@dimen/_68sdp"/>

    <Button
        android:id="@+id/button_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:background="@drawable/btn_round_button"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:padding="@dimen/_25sdp"/>

    <Button
        android:id="@+id/button_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_customer"
        android:text="Admin"
        android:background="@drawable/btn_round_button"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:layout_margin="@dimen/_50sdp"
        android:padding="@dimen/_25sdp"/>

</RelativeLayout>