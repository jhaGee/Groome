<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerStart">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome at"
        android:gravity="center"
        android:textSize="28sp"
        android:padding="@dimen/_20sdp"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:padding="@dimen/_50sdp"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:text="GROOME Status"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/status_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:text="Customers in que :"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_customer"
        android:text=""
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/status_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_status"
        android:text="Free in :"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_time"
        android:text=""
        android:textAllCaps="false"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"/>

</RelativeLayout>